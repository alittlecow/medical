<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jubo.modules.sys.dao.DeviceDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.jubo.modules.sys.entity.DeviceEntity" id="deviceMap">
        <result property="id" column="id"/>
        <result property="code" column="code"/>
        <result property="useStatus" column="use_status"/>
        <result property="isBreakdown" column="is_breakdown"/>
        <result property="totalMoney" column="total_money"/>
        <result property="totalTime" column="total_time"/>
    </resultMap>

	<select id="queryObject" resultType="com.jubo.modules.sys.entity.DeviceEntity">
		select * from device where id = #{value}
	</select>

	<select id="queryList" resultType="com.jubo.modules.sys.entity.DeviceEntity">
		select * from device
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from device 
	</select>
	 
	<insert id="save" parameterType="com.jubo.modules.sys.entity.DeviceEntity">
		insert into device
		(
			`id`, 
			`code`, 
			`use_status`, 
			`is_breakdown`, 
			`total_money`, 
			`total_time`
		)
		values
		(
			#{id}, 
			#{code}, 
			#{useStatus}, 
			#{isBreakdown}, 
			#{totalMoney}, 
			#{totalTime}
		)
	</insert>
	 
	<update id="update" parameterType="com.jubo.modules.sys.entity.DeviceEntity">
		update device 
		<set>
			<if test="code != null">`code` = #{code}, </if>
			<if test="useStatus != null">`use_status` = #{useStatus}, </if>
			<if test="isBreakdown != null">`is_breakdown` = #{isBreakdown}, </if>
			<if test="totalMoney != null">`total_money` = #{totalMoney}, </if>
			<if test="totalTime != null">`total_time` = #{totalTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from device where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from device where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>