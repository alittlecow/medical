<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.modules.api.dao.CardDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="io.renren.modules.api.entity.CardEntity" id="cardMap">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="code" column="code"/>
        <result property="count" column="count"/>
        <result property="createTime" column="create_time"/>
        <result property="lastUseTime" column="last_use_time"/>
    </resultMap>

    <select id="queryObject" resultType="io.renren.modules.api.entity.CardEntity">
		select * from card where id = #{value}
	</select>

    <select id="queryList" resultType="io.renren.modules.api.entity.CardEntity">
        select * from card
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
		select count(*) from card 
	</select>

    <insert id="save" parameterType="io.renren.modules.api.entity.CardEntity">
		insert into card
		(
			`id`, 
			`user_id`, 
			`code`, 
			`count`, 
			`create_time`, 
			`last_use_time`
		)
		values
		(
			#{id}, 
			#{userId}, 
			#{code}, 
			#{count}, 
			#{createTime}, 
			#{lastUseTime}
		)
	</insert>

    <update id="update" parameterType="io.renren.modules.api.entity.CardEntity">
        update card
        <set>
            <if test="userId != null">`user_id` = #{userId},</if>
            <if test="code != null">`code` = #{code},</if>
            <if test="count != null">`count` = #{count},</if>
            <if test="createTime != null">`create_time` = #{createTime},</if>
            <if test="lastUseTime != null">`last_use_time` = #{lastUseTime}</if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
		delete from card where id = #{value}
	</delete>

    <delete id="deleteBatch">
        delete from card where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>